<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:text="EnviroMod"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="80dp"
            android:paddingTop="40dp"
            android:gravity="center_horizontal"
            android:id="@+id/activity_title"
            android:textSize="80sp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/new_recording"
            android:text="New Recording"
            android:textSize="40sp"
            android:onClick="startNewRecording" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/saved_recordings"
            android:text="Saved Recordings"
            android:textSize="40sp"
            android:onClick="startSavedRecordings" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:id="@+id/help"
            android:text="Help"
            android:textSize="40sp"
            android:onClick="startHelp" />

    </LinearLayout>

</RelativeLayout>