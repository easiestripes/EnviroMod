<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="cloyster.final_project_cloyster.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/heading_1"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_volume"
            android:id="@+id/textView_mvolume"
            android:layout_weight="0.25"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekbarVolume"
            android:layout_weight="0.75"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_carrier_frequency"
            android:id="@+id/textView_carrier_frequency"
            android:layout_weight="0.25"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekbarCarrierFrequency"
            android:layout_weight="0.75"/>
    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_modulator_frequency"
        android:id="@+id/textView_modulator_frequency"
        android:layout_weight="0.25"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbarModulatorFrequency"
        android:layout_weight="0.75"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_modulator_depth"
            android:id="@+id/textView_modulator_depth"
            android:layout_weight="0.25"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekbarModulatorDepth"
            android:layout_weight="0.75"/>
    </LinearLayout>


    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/button_toggle_off_permanant"
        android:textOn="@string/button_toggle_on_permanant"
        android:id="@+id/buttonToggleSound"/>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/button_toggle_off_record"
        android:textOn="@string/button_toggle_on_record"
        android:id="@+id/buttonToggleRecord"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/button_play"
        android:id="@+id/buttonPlaySound"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/button_playRecording"
        android:id="@+id/buttonPlayRecording"/>




</LinearLayout>
